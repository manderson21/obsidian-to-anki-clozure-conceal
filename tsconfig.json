{
	"compilerOptions": {
		"baseUrl": "./",
		"inlineSourceMap": true,
		"module": "ESNext",
		"target": "ES2022",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": [
			"DOM",
			"ES2022"
		]
	},
	"include": [
		"src/**/*.ts",
		"tests/**/*.ts",
		"docs/**/*"
	]
}
